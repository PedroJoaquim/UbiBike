<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulisboa.tecnico.cmu.ubibike.fragments.LoginFragment"
    android:background="@drawable/background">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name_editText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:hint="Name"
        android:backgroundTint="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/email_editText"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:hint="E-mail"
        android:backgroundTint="#ffffff"
        android:layout_below="@+id/name_editText"
        android:layout_alignLeft="@+id/name_editText"
        android:layout_alignStart="@+id/name_editText"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_editText"
        android:layout_below="@+id/email_editText"
        android:layout_alignLeft="@+id/email_editText"
        android:layout_alignStart="@+id/email_editText"
        android:hint="Password"
        android:backgroundTint="#ffffff"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/reentered_password_editText"
        android:hint="Re-enter password"
        android:backgroundTint="#ffffff"
        android:layout_below="@+id/password_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/right_password_imageView"
        android:layout_alignBottom="@+id/reentered_password_editText"
        android:layout_toRightOf="@+id/reentered_password_editText"
        android:layout_toEndOf="@+id/reentered_password_editText"
        android:layout_marginBottom="10dp"
        android:background="@drawable/check" />

</RelativeLayout>
