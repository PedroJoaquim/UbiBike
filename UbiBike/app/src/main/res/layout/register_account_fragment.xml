<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulisboa.tecnico.cmu.ubibike.fragments.RegisterAccountFragment"
    android:background="@drawable/background">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name_editText"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:hint="Name"
        android:backgroundTint="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="164dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/email_editText"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:hint="E-mail"
        android:backgroundTint="#ffffff"
        android:layout_below="@+id/name_editText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_editText"
        android:hint="Password"
        android:backgroundTint="#ffffff"
        android:layout_below="@+id/email_editText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/reentered_password_editText"
        android:hint="Re-enter password"
        android:backgroundTint="#ffffff"
        android:layout_below="@+id/password_editText"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/right_password_imageView"
        android:background="@drawable/check"
        android:visibility="invisible"
        android:layout_below="@+id/reentered_password_editText"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/create_account_Button"
        android:height="20dp"
        android:width="100dp"
        android:text="Join Now"
        android:textColor="#FFFFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/right_password_imageView"
        android:layout_alignLeft="@+id/reentered_password_editText"
        android:layout_alignStart="@+id/reentered_password_editText"
        android:layout_alignRight="@+id/reentered_password_editText"
        android:layout_alignEnd="@+id/reentered_password_editText" />

</RelativeLayout>
