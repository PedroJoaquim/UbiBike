<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulisboa.tecnico.cmu.ubibike.fragments.RegisterAccountFragment"
    android:background="@drawable/blured_background"
    android:nestedScrollingEnabled="false">


    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/email_editText"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:hint="E-mail"
        android:backgroundTint="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_editText"
        android:hint="Password"
        android:backgroundTint="#ffffff"
        android:layout_below="@+id/email_editText"
        android:layout_alignLeft="@+id/email_editText"
        android:layout_alignStart="@+id/email_editText"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:id="@+id/right_password_imageView"
        android:background="@drawable/check"
        android:visibility="invisible"
        android:layout_above="@+id/password_editText"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/sign_in_button"
        android:height="20dp"
        android:width="100dp"
        android:text="Sign In"
        android:textColor="#FFFFFFFF"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:layout_below="@+id/password_editText"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/password_editText"
        android:layout_alignStart="@+id/password_editText"
        android:layout_alignRight="@+id/password_editText"
        android:layout_alignEnd="@+id/password_editText"
        android:alpha="0.7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sign Up For UbiBike"
        android:id="@+id/sign_up_textView"
        android:textColor="#77bfc5c4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:clickable="true" />

</RelativeLayout>
