<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hosted by:"
        android:textColor="@color/black"
        android:id="@+id/msg_sender_textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="someone"
        android:id="@+id/hosted_by_textView"
        android:textColor="@color/grey"
        android:layout_alignBottom="@+id/msg_sender_textView"
        android:layout_toRightOf="@+id/msg_sender_textView"
        android:layout_toEndOf="@+id/msg_sender_textView"
        android:layout_marginLeft="10dp" />

</RelativeLayout>

