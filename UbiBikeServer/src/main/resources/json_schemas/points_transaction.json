{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Points_Transaction",
  "description": "Points transaction",
  "type": "object",
  "properties": {
    "sender_id": {
      "description": "The user id from the guy who sent the points",
      "type": "integer"
    },
    "points_exchanged":{
      "type":"integer"
    },
    "points_source":{
      "type":"object",
      "properties":{
        "source":{"type":"string", "pattern":"^transaction|run$"},
        "source_id": {"type":"string"}
      },
      "required" : ["source", "source_id"]
    }
  },

  "required": ["sender_id", "points_exchanged", "points_source"]
}